<main id="main" class="main">
    <div class="container">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Search Quizes</h5>
                <form class="row g-3">
                    <div class="col-md-4">
                        <label for="quizName" class="form-label">Quiz Name</label>
                        <input type="text" class="form-control" id="quizName" placeholder="Enter quiz name">
                    </div>
                    <div class="col-md-4">
                        <label for="quizDate" class="form-label">Quiz Date</label>
                        <input type="date" class="form-control" id="quizDate">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="button" class="btn btn-primary btn-custom mx-1">Search</button>
                        <button type="reset" class="btn btn-secondary btn-custom mx-1">Reset</button>
                        @* <a class="btn btn-success mx-1" asp-controller="Quiz" asp-action="Add"> Add New Quiz</a> *@
                    </div>
                </form>
            </div>
        </div>

        <!-- Quiz List Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Question List</h5>
                <a class="btn btn-success" id="addQuestionBtn" asp-controller="Quiz" asp-action="Add">Add Quiz</a>
            </div>
            <div class="card-body" float="s">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="card">

                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Quiz Name</th>
                                        <th>Total Questions</th>
                                        <th>Quiz Date</th>
                                        <th>User ID</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>General Knowledge</td>
                                        <td>20</td>
                                        <td>2025-01-01</td>
                                        <td>101</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Science Quiz</td>
                                        <td>15</td>
                                        <td>2025-01-15</td>
                                        <td>102</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Mathamatics</td>
                                        <td>10</td>
                                        <td>2025-01-10</td>
                                        <td>103</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>