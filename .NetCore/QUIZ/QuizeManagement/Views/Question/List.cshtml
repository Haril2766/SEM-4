@model DataTable
@using System.Data


<main id="main" class="main">
    <div class="container mt-5">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Search Questions</h5>
            </div>
            <div class="card-body">
                <form class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Question Text">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Correct Options">
                    </div>
                    <div class="col-md-4">
                        <input type="number" class="form-control" placeholder="Question Marks">
                    </div>
                    <div class="text-start">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Question List Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Question List</h5>
                <a class="btn btn-success" id="addQuestionBtn" asp-controller="Question" asp-action="Add">Add Questions</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <!-- Table with stripped rows -->
                            <div class="table-responsive">
                                <table class="table datatable">
                                    <thead>
                                      <tr>
                                            <th><b>Q</b>uestion ID</th>
                                            <th>Question Text</th>
                                            <th>Option A</th>
                                            <th>Option B</th>
                                            <th>Option C</th>
                                            <th>Option D</th>
                                            <th>Correct Option</th>
                                            <th>Question Marks</th>
                                            <th>User Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.Rows)
                                        {
                                            <tr>
                                                <td>@row["QuestionID"]</td>
                                                <td>@row["QuestionText"]</td>
                                                <td>@row["OptionA"]</td>
                                                <td>@row["OptionB"]</td>
                                                <td>@row["OptionC"]</td>
                                                <td>@row["OptionD"]</td>
                                                <td>@row["CorrectOption"]</td>
                                                <td>@row["QuestionMarks"]</td>
                                                <td>@row["UserName"]</td>
                                                <td>
                                                    <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-pencil"></i></a>
                                                    <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- End Table with stripped rows -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
