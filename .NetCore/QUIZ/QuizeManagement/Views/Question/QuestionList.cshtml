<main id="main" class="main">
    <div class="container mt-5">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Search Questions</h5>
            </div>
            <div class="card-body">
                <form id="searchForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="searchText" placeholder="Enter question text">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="searchLevel">
                                <option value="">Select Level</option>
                                <option value="1">Easy</option>
                                <option value="2">Medium</option>
                                <option value="3">Hard</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary w-100" id="searchBtn">Search</button>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="button" class="btn btn-secondary" id="resetBtn">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Question List Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Question List</h5>
                <a class="btn btn-success" id="addQuestionBtn" asp-controller="Question" asp-action="QuestionAdd">Add New Question</a>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Question Text</th>
                            <th>Level</th>
                            <th>Marks</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="questionTable">
                        <!-- Dynamic rows will be added here -->
                        <tr>
                            <td>1</td>
                            <td>What is the capital of France?</td>
                            <td>Easy</td>
                            <td>5</td>
                            <td>
                                <button class="btn btn-warning btn-sm">Edit</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Explain the theory of relativity.</td>
                            <td>Hard</td>
                            <td>10</td>
                            <td>
                                <button class="btn btn-warning btn-sm">Edit</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>