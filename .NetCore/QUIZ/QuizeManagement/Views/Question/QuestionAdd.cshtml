<main id="main" class="main">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Question </h5>
                <form class="row g-3">
                    <div class="col-12">
                        <label for="inputquesation4" class="form-label">Question text</label>
                        <input type="text" class="form-control" id="inputquesation4">
                    </div>
                    <div class="col-12">
                        <label for="inputQuestions4" class="form-label">Question Level</label>
                        <input type="number" class="form-control" id="inputQuestions4">
                    </div>
                    <div class="col-12">
                        <label for="inputOptionA4" class="form-label">Option A </label>
                        <input type="text" class="form-control" id="inputOptionA4">
                    </div>
                    <div class="col-12">
                        <label for="inputOptionB4" class="form-label">Option B </label>
                        <input type="text" class="form-control" id="inputOptionB4">
                    </div>
                    <div class="col-12">
                        <label for="inputOptionC4" class="form-label">Option C </label>
                        <input type="text" class="form-control" id="inputOptionC4">
                    </div>
                    <div class="col-12">
                        <label for="inputOptionD4" class="form-label">Option D </label>
                        <input type="text" class="form-control" id="inputOptionD4">
                    </div>
                    <div class="col-6">
                        <label for="inputState" class="form-label">Correct Option</label>
                        <select id="inputState" class="form-select">
                            <option selected>Option A</option>
                            <option>Option B</option>
                            <option>Option c</option>
                            <option>Option D</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="inputQuestionsMark4" class="form-label">Question Mark</label>
                        <input type="number" class="form-control" id="inputQuestionsMark4">
                    </div>


                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-secondary" asp-controller="Question" asp-action="QuestionList">Cancel</a>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</main>
