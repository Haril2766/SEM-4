@model DataTable
@using System.Data


<main id="main" class="main">
    <div class="container mt-5">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Search Questions</h5>
            </div>
            <div class="card-body">
                <form class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Question Text">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Correct Options">
                    </div>
                    <div class="col-md-4">
                        <input type="number" class="form-control" placeholder="Question Marks">
                    </div>
                    <div class="text-start">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Question List Section -->
        <div class="card">
            <div class="card-body">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="card-title">Question Level List</h2>
                    <div class="d-flex p-3 justify-content-end">
                        <a asp-controller="QuizWiseQuestion" asp-action="Add" class="btn btn-primary w-20">
                            <i class="bi bi-plus"></i> Add Question Level
                        </a>
                    </div>
                </div>
                <table class="table datatable">

                    <thead>
                        <tr>
                            <th>QuizWiseQuestionsID</th>
                            <th>Quiz Name</th>
                            <th>Question Text</th>
                            <th>User Name</th>
                            <th>Modified</th>
                            <th>Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>
                                ASP.NET is a ____.
                            </td>
                            <td>You i am</td>
                            <td>Karan</td>
                            <td>2020/02/25</td>
                            <td>2023/05/20</td>
                            <td>
                                <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-pencil"></i></a>
                                <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                        <tr>
                            <td>1</td>
