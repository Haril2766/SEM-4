                @using (Html.BeginForm())
                {
                    <div class="row g-3">
                        <div class="col-12">
                            <span class="text-danger">*</span>
                            @Html.LabelFor(model => model.UserID, "User ID", new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.UserID, new SelectList(new List<SelectListItem> { }), "User Id", new { @class = "form-select", required = "required" })
                            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-12">
                            <span class="text-danger">*</span>
                            @Html.LabelFor(model => model.QuizName, "Quiz Name", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.QuizName, new { @class = "form-control", placeholder = "Enter Quiz Name", required = "required" })
                            @Html.ValidationMessageFor(model => model.QuizName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12">
                            <span class="text-danger">*</span>
                            @Html.LabelFor(model => model.QuestionLevel, "Question Level", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.QuestionLevel, new SelectList(new[]
                                     {
                                            new { Value = 1, Text = "Easy" },
                                            new { Value = 2, Text = "Medium" },
                                            new { Value = 3, Text = "Hard" }
                                      }, "Value", "Text"), "Select Level", new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.QuestionLevel, "", new { @class = "text-danger" })

                    </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-secondary" asp-controller="QuestionLevel" asp-action="List">Cancel</a>
                        </div>
                    </div>
                }
